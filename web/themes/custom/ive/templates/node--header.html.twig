<header>
    <h1> node--header </h1>
    {{ title_prefix }}
    {% if label and not page %}
        <h2{{ title_attributes.addClass('node__title') }}><a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h2>
    {% endif %}
    {{ title_suffix }}
    {% if display_submitted %}
        <div class="node__meta">
            {% if author_display %}
                <h2>Article full</h2>
                {{ author_picture }}
                <span{{ author_attributes }}>{% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
                </span>
            {% else %}
                <h2>Article teaser</h2>
                {{ author_picture }}
                <span{{ author_attributes }}>{% trans %}Submitted {{ date }}{% endtrans %}
                </span>
            {% endif %}

            {#{{ author_picture }}
            <span{{ author_attributes }}>
            {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
            </span>#}
            {{ metadata }}
            {#{{ kint(metadata) }}#}
        </div>
    {% endif %}
</header>
